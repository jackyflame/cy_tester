<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ededed">
    <include
        android:id="@+id/title"
        layout="@layout/include_comm_text_title"/>
    <com.cyztc.app.widget.refresh.SpringView
        android:id="@+id/springview"
        android:layout_below="@+id/title"
        android:layout_above="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:background="@color/color_white">
                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="120px"
                        android:layout_height="120px"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ly_see"
                        android:layout_toRightOf="@+id/iv_head"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="名字"
                            android:textSize="40px"
                            android:textColor="@color/color_333333"/>
                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一天前"
                            android:textSize="36px"
                            android:textColor="@color/color_666666"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_see"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="40px"
                        android:layout_marginRight="40px"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:src="@mipmap/icon_see"/>
                        <TextView
                            android:id="@+id/tv_see"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="36px"
                            android:layout_marginLeft="20px"
                            android:textColor="@color/color_666666"/>
                    </LinearLayout>
                </RelativeLayout>
                <com.cyztc.app.widget.ywl5320.RichTextLayout
                    android:id="@+id/richtextview"
                    android:orientation="vertical"
                    android:background="@color/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40px"
                    android:paddingRight="40px"
                    android:paddingBottom="30px"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@color/color_ededed"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@color/color_white"
                    android:paddingLeft="40px"
                    android:paddingRight="40px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论"
                        android:textColor="@color/color_333333"
                        android:textSize="40px"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36px"
                        android:textColor="@color/color_666666"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_ededed"/>
                <com.cyztc.app.widget.CustomListView
                    android:id="@+id/customlistview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:layout_marginBottom="40px"/>
            </LinearLayout>
        </ScrollView>
    </com.cyztc.app.widget.refresh.SpringView>

    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:background="@color/color_white"
        android:layout_above="@+id/iv_span">

        <ImageView
            android:id="@+id/iv_zan"
            android:layout_width="80px"
            android:layout_height="80px"
            android:padding="5px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:src="@mipmap/icon_userup"/>
        <TextView
            android:id="@+id/tv_send"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:text="发送"
            android:gravity="center"
            android:background="@color/color_white"
            android:textSize="40px"
            android:textColor="@color/color_12a7e2"/>
        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:background="@drawable/count_drawable_mid"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_zan"
            android:textSize="40px"
            android:maxLines="5"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:maxLength="100"
            android:singleLine="true"
            android:paddingRight="80px"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_emoji"
            android:layout_width="60px"
            android:layout_height="60px"
            android:src="@mipmap/icon_publish_emmoji"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_send"
            android:layout_marginRight="50px"/>

    </RelativeLayout>
    <ImageView
        android:layout_below="@id/springview"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ededed"/>
    <ImageView
        android:id="@+id/iv_span"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>