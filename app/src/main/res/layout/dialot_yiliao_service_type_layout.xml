<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:clickable="false"
            android:background="@drawable/round_drawable_selector_singal_20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:text="选择服务类型"
                android:layout_gravity="center_horizontal"
                android:textSize="34px"
                android:textColor="@color/color_333333"
                android:gravity="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_ededed"/>
            <TextView
                android:id="@+id/tv_door"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:text="看病咨询"
                android:textSize="45px"
                android:textColor="@color/color_1096ca"
                android:background="@drawable/round_drawable_selector_tr"
                android:gravity="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_ededed"/>
            <TextView
                android:id="@+id/tv_tea"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:text="买药"
                android:textSize="45px"
                android:textColor="@color/color_1096ca"
                android:background="@drawable/round_drawable_selector_tr"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_need"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:text="医生急诊"
                android:textSize="45px"
                android:textColor="@color/color_1096ca"
                android:gravity="center"
                android:background="@drawable/round_drawable_selector_tr"/>
            <TextView
                android:id="@+id/tv_other"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:text="其他"
                android:textSize="45px"
                android:textColor="@color/color_1096ca"
                android:gravity="center"
                android:background="@drawable/round_drawable_selector_buttom_20"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:textColor="@color/color_1096ca"
            android:layout_marginBottom="30px"
            android:textSize="45px"
            android:gravity="center"
            android:background="@drawable/round_drawable_selector_20"
            android:text="取消"/>
    </LinearLayout>
</RelativeLayout>