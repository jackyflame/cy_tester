<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ededed">
    <include
        layout="@layout/include_comm_text_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ly_search"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:background="@color/color_ededed"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:background="@drawable/search_selector_r">
                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_marginLeft="40px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_search_gray"/>
                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/iv_search"
                    android:hint="搜索"
                    android:gravity="center_vertical"
                    android:textSize="38px"
                    android:textColor="@color/color_999999"
                    android:textColorHint="@color/color_666666"
                    android:background="@null"
                    android:imeOptions="actionSearch"
                    android:paddingLeft="40px"
                    android:paddingRight="40px"
                    android:singleLine="true"/>
            </RelativeLayout>
        </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/ly_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"/>
                <ListView
                    android:id="@+id/sear_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"/>
            </RelativeLayout>
        <LinearLayout
            android:id="@+id/ly_loadmsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>