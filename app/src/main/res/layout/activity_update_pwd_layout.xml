<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <include
        layout="@layout/include_comm_text_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:orientation="vertical"
        android:background="@mipmap/icon_user_loginbg"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="80px">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">
            <EditText
                android:id="@+id/et_oldpwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/iv_see"
                android:background="@null"
                android:textSize="38px"
                android:layout_marginLeft="40px"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_999999"
                android:inputType="textPassword"
                android:hint="请输入原密码"/>
            <ImageView
                android:id="@+id/iv_see"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/icon_pwd_see"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">
            <EditText
                android:id="@+id/et_newpwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/iv_see2"
                android:background="@null"
                android:textSize="38px"
                android:layout_marginLeft="40px"
                android:singleLine="true"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_999999"
                android:hint="请输入8-20位字符或数字组成的密码"
                android:inputType="textPassword"
                android:maxLength="20"/>
            <ImageView
                android:id="@+id/iv_see2"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/icon_pwd_see"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="160px"
        android:background="@mipmap/icon_btn_login_bg"/>
</LinearLayout>