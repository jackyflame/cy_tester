<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ededed">
    <include
        layout="@layout/include_comm_text_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ly_action">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_marginTop="30px"
                        android:background="@color/color_white">
                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="40px"
                            android:textSize="40px"
                            android:textColor="@color/color_333333"
                            android:text="类型"/>
                        <TextView
                            android:id="@+id/tv_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40px"
                            android:textColor="@color/color_333333"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="40px"
                            android:text="值"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180px"
                    android:layout_marginTop="30px"
                    android:background="@color/color_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_start_time"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/item_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60px"
                            android:layout_marginTop="30px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12px"
                                android:layout_height="40px"
                                android:background="@color/color_12a7e2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="28px"
                                android:text="开始时间"
                                android:textColor="@color/color_333333"
                                android:textSize="40px" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="40px"
                            android:layout_marginLeft="28px"
                            android:textColor="@color/color_333333"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/color_ededed" />

                    <LinearLayout
                        android:id="@+id/ly_end_time"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/item_background">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60px"
                            android:layout_marginTop="30px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12px"
                                android:layout_height="40px"
                                android:background="@color/color_12a7e2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="28px"
                                android:text="结束时间"
                                android:textColor="@color/color_333333"
                                android:textSize="40px"
                                android:layout_marginRight="40px"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="40px"
                            android:layout_marginLeft="40px"
                            android:textColor="@color/color_333333"/>
                    </LinearLayout>
                </LinearLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180px"
                    android:visibility="gone"
                    android:background="@color/color_white">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px">

                        <TextView
                            android:id="@+id/tv_create_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2016年10月01日"
                            android:textSize="34px"
                            android:layout_marginTop="15px"
                            android:textColor="@color/color_666666"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="审批中"
                        android:textSize="36px"
                        android:textColor="@color/color_12a7e2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40px"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_ededed"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/color_white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15px"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="请假时长："
                            android:textSize="40px"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2017-10-10 10:10"
                            android:textSize="40px"
                            android:textColor="@color/color_333333"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_cars"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30px"
                        android:background="@color/color_ededed"/>
                    <TextView

                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"
                        android:layout_marginBottom="40px"
                        android:paddingTop="40px"
                        android:text="请假事由：没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由没理由"
                        android:textSize="40px"
                        android:textColor="@color/color_666666"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:background="@color/color_white"
                    android:text="审批人"
                    android:gravity="center_vertical"
                    android:paddingLeft="40px"
                    android:textColor="@color/color_333333"
                    android:textSize="40px"
                    android:layout_marginTop="20px"/>
                <com.cyztc.app.widget.CustomListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/ly_action"
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/tv_disagree"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="不同意"
                android:gravity="center"
                android:textSize="40px"
                android:background="@color/color_white"
                android:textColor="@color/color_e10000"/>
            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="同意"
                android:textSize="40px"
                android:gravity="center"
                android:background="@color/color_white"
                android:textColor="@color/color_12a7e2"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ly_loadmsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>