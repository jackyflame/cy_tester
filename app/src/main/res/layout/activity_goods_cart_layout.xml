<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ededed">
    <include
        layout="@layout/include_comm_tribe_tab_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.cyztc.app.widget.refresh.SpringView
            android:id="@+id/springview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_actions">
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.cyztc.app.widget.refresh.SpringView>



        <RelativeLayout
            android:id="@+id/rl_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white">
            <LinearLayout
                android:id="@+id/ly_pay_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择付款方式"
                    android:textColor="@color/color_333333"
                    android:textSize="34px"
                    android:layout_marginLeft="40px"
                    android:layout_marginTop="40px"
                    android:layout_marginBottom="20px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="50px">

                    <LinearLayout
                        android:id="@+id/ly_wx_pay"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_wx"
                            android:layout_width="140px"
                            android:layout_height="match_parent"
                            android:paddingLeft="50px"
                            android:paddingRight="40px"
                            android:layout_centerVertical="true"
                            android:src="@drawable/list_selected_selector"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/icon_wx_pay"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_ali_pay"
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv_alipay"
                            android:layout_width="140px"
                            android:layout_height="match_parent"
                            android:paddingLeft="50px"
                            android:paddingRight="40px"
                            android:layout_centerVertical="true"
                            android:src="@drawable/list_selected_selector"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="80px"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/icon_alipay_pay"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/line"
                android:layout_below="@+id/ly_pay_way"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_ededed"/>
            <LinearLayout
                android:id="@+id/ly_selected_all"
                android:layout_below="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_selected"
                    android:layout_width="140px"
                    android:layout_height="120px"
                    android:paddingLeft="40px"
                    android:paddingRight="40px"
                    android:layout_centerVertical="true"
                    android:src="@drawable/list_selected_selector"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="38px"
                    android:textColor="@color/color_666666"
                    android:text="全选"/>
            </LinearLayout>

            <TextView
                android:layout_below="@+id/ly_pay_way"
                android:id="@+id/tv_pay_del"
                android:layout_width="300px"
                android:layout_height="152px"
                android:text="支付"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_white"
                android:textSize="40px"
                android:background="@color/color_e10000"/>
            <TextView
                android:layout_below="@+id/line"
                android:id="@+id/tv_totalprice"
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:layout_toLeftOf="@+id/tv_pay_del"
                android:text="合计：0"
                android:gravity="center_vertical"
                android:textSize="40px"
                android:layout_marginRight="80px"
                android:textColor="@color/color_333333"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ly_loadmsg"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/color_white"/>
    </RelativeLayout>
</LinearLayout>