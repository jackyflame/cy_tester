<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ededed">
    <include
        layout="@layout/include_comm_text_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_service_type"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal"
                android:background="@drawable/item_background"
                android:layout_marginTop="30px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务类型"
                    android:textSize="40px"
                    android:layout_marginLeft="40px"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_333333"/>
                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:src="@mipmap/icon_more"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"/>
                <TextView
                    android:id="@+id/tv_subtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择服务类型"
                    android:textSize="38px"
                    android:textColor="@color/color_666666"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_more"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal"
                android:background="@drawable/item_background"
                android:layout_marginTop="30px">
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务地点"
                    android:textSize="40px"
                    android:layout_marginLeft="40px"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_333333"/>
                <EditText
                    android:id="@+id/et_address"
                    android:layout_toRightOf="@id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100px"
                    android:layout_marginTop="35px"
                    android:paddingRight="20px"
                    android:paddingLeft="20px"
                    android:gravity="right|center_vertical"
                    android:textSize="40px"
                    android:textColor="@color/color_333333"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40px"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:paddingTop="40px"
                android:paddingLeft="40px"
                android:background="@color/color_white"
                android:layout_marginBottom="40px">
                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textSize="40px"
                    android:textColor="@color/color_333333"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="300px"
                    android:layout_marginRight="18dp"
                    android:gravity="top|left"
                    android:padding="15px"
                    android:maxLength="100"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="40px"
                    android:background="@drawable/round_drawable_selector"
                    android:layout_below="@+id/tv_note"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="18dp"
                    android:textSize="40px"
                    android:id="@+id/et_remark" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">
                <com.cyztc.app.widget.CustomGridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:verticalSpacing="20px"
                    android:horizontalSpacing="20px"
                    android:layout_margin="40px"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>