<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:paddingTop="20px"
        android:background="@color/color_white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140px">

            <Button
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="取消"
                android:textSize="46px"
                android:textColor="@color/color_333333"
                android:background="@drawable/white_normal_bottom_dialog_bg_left"/>
            <Button
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确定"
                android:textSize="46px"
                android:textColor="@color/color_12a7e2"
                android:layout_alignParentRight="true"
                android:background="@drawable/white_normal_bottom_dialog_bg_right"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_ededed"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:orientation="horizontal">
            <com.cyztc.app.widget.wheel.widget.views.WheelView
                android:id="@+id/wv_year"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <com.cyztc.app.widget.wheel.widget.views.WheelView
                android:id="@+id/wv_month"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <com.cyztc.app.widget.wheel.widget.views.WheelView
                android:id="@+id/wv_day"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="3px"
                android:layout_height="150px"
                android:layout_gravity="center_vertical"
                android:background="@color/color_ededed"/>
            <com.cyztc.app.widget.wheel.widget.views.WheelView
                android:id="@+id/wv_hour"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/color_333333"
                android:layout_gravity="center_vertical"
                android:textSize="40px"/>
            <com.cyztc.app.widget.wheel.widget.views.WheelView
                android:id="@+id/wv_min"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>