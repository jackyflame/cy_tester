<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ededed">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:src="@drawable/temp_classes_bg"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280px"
        android:orientation="horizontal"
        android:layout_marginTop="40px"
        >

        <LinearLayout
            android:id="@+id/ly_ebook"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/item_background">
            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@mipmap/icon_know_ebook"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子书"
                android:layout_marginTop="15px"
                android:textSize="38px"
                android:textColor="@color/color_333333"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly_tushu"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/item_background">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@mipmap/icon_konw_tushu"
                android:id="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图书借阅"
                android:layout_marginTop="15px"
                android:textSize="38px"
                android:textColor="@color/color_333333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_video"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/item_background">
            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@mipmap/icon_know_video"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文件"
                android:layout_marginTop="15px"
                android:textSize="38px"
                android:textColor="@color/color_333333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_audio"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/item_background">
            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@mipmap/icon_know_radio"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音频"
                android:layout_marginTop="15px"
                android:textSize="38px"
                android:textColor="@color/color_333333"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:orientation="horizontal"
        android:layout_marginBottom="40px"
        android:layout_marginTop="40px"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_know_hot"
                android:layout_marginTop="60px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑力推热文"
                android:layout_marginTop="15px"
                android:textSize="34px"
                android:textColor="@color/color_666666"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/temp_classes_bg"
                android:scaleType="fitXY"
                android:layout_marginLeft="90px"
                android:layout_marginRight="90px"
                android:layout_marginBottom="80px"
                android:layout_marginTop="18px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="2px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="40px">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_free"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编辑力推热文"
                        android:layout_marginTop="15px"
                        android:textSize="34px"
                        android:textColor="@color/color_666666"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/temp_classes_bg"
                    android:layout_marginLeft="55px"
                    android:layout_marginRight="55px"
                    android:scaleType="fitXY"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:layout_marginTop="2px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="40px">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_know_new"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编辑力推热文"
                        android:layout_marginTop="15px"
                        android:textSize="34px"
                        android:textColor="@color/color_666666"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/temp_classes_bg"
                    android:layout_marginLeft="55px"
                    android:layout_marginRight="55px"
                    android:scaleType="fitXY"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热门推荐"
        android:textSize="40px"
        android:textColor="@color/color_333333"
        android:padding="40px"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:background="@color/color_white"/>
</LinearLayout>