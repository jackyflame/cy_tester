<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_background">
    <View
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:background="@color/color_ededed"/>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="150px">
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ly_see"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textSize="40px"
                android:textColor="@color/color_333333"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一天前"
                android:textSize="36px"
                android:textColor="@color/color_666666"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40px"
            android:layout_marginRight="40px"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/icon_see"/>
            <TextView
                android:id="@+id/tv_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="36px"
                android:layout_marginLeft="20px"
                android:textColor="@color/color_666666"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="标题"
        android:textSize="48px"
        android:textColor="@color/color_121212"
        android:padding="40px"/>
    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="40px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:textColor="@color/color_333333"/>

    <com.cyztc.app.widget.ywl5320.RichTextLayoutH
        android:id="@+id/rtl_text"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="6px"
        android:layout_marginBottom="40px"/>

    <LinearLayout
        android:id="@+id/ly_action"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="60px"
                android:layout_height="90px"
                android:src="@mipmap/icon_msg"/>

            <TextView
                android:id="@+id/tv_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="290"
                android:textSize="36px"
                android:textColor="@color/color_666666"
                android:layout_marginLeft="20px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="60px"
                android:layout_height="90px"
                android:src="@mipmap/icon_userup"/>

            <TextView
                android:id="@+id/tv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="290"
                android:textSize="36px"
                android:textColor="@color/color_666666"
                android:layout_marginLeft="20px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="invisible">
            <ImageView
                android:layout_width="60px"
                android:layout_height="90px"
                android:src="@mipmap/icon_tribe_more"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>