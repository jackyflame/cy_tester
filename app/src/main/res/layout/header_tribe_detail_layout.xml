<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="800px">
        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_tribe_head"
                android:layout_width="250px"
                android:layout_height="250px"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UI设计自学平台"
                android:layout_marginTop="30px"
                android:textSize="50px"
                android:textColor="@color/color_white"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px">
                <TextView
                    android:id="@+id/tv_mid"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="40px"
                    android:text="|"/>
                <TextView
                    android:id="@+id/tv_remb"
                    android:layout_toLeftOf="@+id/tv_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="40px"
                    android:layout_marginRight="50px"
                    android:text="成员11100"/>
                <TextView
                    android:id="@+id/tv_tops"
                    android:layout_toRightOf="@+id/tv_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="40px"
                    android:layout_marginLeft="50px"
                    android:text="话题8989"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_join"
            android:layout_width="200px"
            android:layout_height="90px"
            android:text="加入"
            android:gravity="center"
            android:textSize="42px"
            android:textColor="@color/color_white"
            android:background="@drawable/btn_selector_blue"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40px"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_createname"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:text="创建者"
            android:gravity="center"
            android:textSize="42px"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40px"/>
    </RelativeLayout>
</LinearLayout>