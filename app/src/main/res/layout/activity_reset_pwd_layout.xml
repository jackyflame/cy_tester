<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <include
        android:id="@+id/title"
        layout="@layout/include_comm_text_title"/>
    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="80px"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/search_selector_r">
            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="38px"
                android:layout_marginLeft="40px"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_999999"
                android:hint="请输入账号"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_666666"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:visibility="gone">
            <EditText
                android:id="@+id/et_cardid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="38px"
                android:layout_marginLeft="40px"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_999999"
                android:hint="请输入身份证号"
                android:maxLength="16"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_2"
        android:layout_below="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:orientation="vertical"
        android:background="@mipmap/icon_user_loginbg"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="-3px"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">
            <EditText
                android:id="@+id/et_phonenum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="38px"
                android:layout_marginLeft="40px"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_999999"
                android:hint="请输入电话号码"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px">
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="38px"
                android:layout_marginLeft="40px"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_999999"
                android:hint="请输入姓名"
                android:maxLength="16"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_below="@id/ly_2"
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="100px"
        android:text="重置密码"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:textSize="45px"
        android:background="@drawable/btn_selector_blue"/>
</RelativeLayout>