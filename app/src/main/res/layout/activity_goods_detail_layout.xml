<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ededed">
    <include
        android:id="@+id/title"
        layout="@layout/include_comm_text_title"/>
    <ScrollView
        android:layout_above="@+id/ly_action"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white">
            <RelativeLayout
                android:id="@+id/rl_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="1200px"/>
            </RelativeLayout>
            <View
                android:id="@+id/line1"
                android:layout_below="@+id/rl_pic"
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/color_ededed"/>
            <LinearLayout
                android:layout_below="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="40px"
                android:paddingBottom="40px"
                android:paddingLeft="40px"
                android:paddingRight="40px">
                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红牛维生素功能饮料"
                    android:textSize="40px"
                    android:textColor="@color/color_333333"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px">
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="40px"
                        android:text="¥120"
                        android:layout_marginTop="50px"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_e10000"/>
                    <com.cyztc.app.widget.ywl5320.CountView
                        android:id="@+id/countview"
                        android:layout_width="300px"
                        android:layout_height="80px"
                        android:layout_marginLeft="40px"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已选"
                        android:textSize="35px"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_666666"/>
                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_toRightOf="@+id/tv_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已选"
                        android:textSize="35px"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_333542"
                        android:layout_marginLeft="40px"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ly_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingBottom="30px"
        android:paddingTop="30px"
        android:background="@color/color_white">
        <ImageView
            android:id="@+id/iv_addcart"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_goods_addcar"/>
        <ImageView
            android:id="@+id/iv_buy"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginLeft="80px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_goods_pay"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_loadmsg"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="@color/color_white"/>
</RelativeLayout>