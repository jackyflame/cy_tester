<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ededed">
    <include
        android:id="@+id/title"
        layout="@layout/include_comm_text_title"/>
    <LinearLayout
        android:id="@+id/ly_content"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <com.cyztc.app.widget.SquareImageView
            android:id="@+id/siv_img"
            android:layout_width="320px"
            android:layout_height="320px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="简介"
            android:textSize="40px"
            android:textColor="@color/color_333333"
            android:layout_toRightOf="@id/siv_img"
            android:layout_marginTop="40px"
            android:layout_marginRight="40px"
            android:layout_marginBottom="80px"
            android:layout_marginLeft="40px"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="360px"
        android:layout_height="1px"
        android:layout_below="@+id/ly_content"/>
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_toRightOf="@+id/tv_empty"
            android:layout_below="@+id/ly_content"
            android:textColor="@color/color_e10000"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="-60px"/>
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X1"
            android:textColor="@color/color_e10000"
            android:layout_marginBottom="40px"
            android:layout_marginRight="40px"
            android:layout_below="@+id/ly_content"
            android:layout_marginTop="-60px"
            android:layout_alignParentRight="true"/>

    <RelativeLayout
        android:id="@+id/rl_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white">
        <TextView
            android:layout_below="@+id/ly_pay_way"
            android:id="@+id/tv_pay_del"
            android:layout_width="300px"
            android:layout_height="152px"
            android:text="支付"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_white"
            android:textSize="40px"
            android:background="@color/color_e10000"/>
        <TextView
            android:layout_below="@+id/line"
            android:id="@+id/tv_totalprice"
            android:layout_width="wrap_content"
            android:layout_height="150px"
            android:text="合计：0"
            android:gravity="center_vertical"
            android:textSize="40px"
            android:layout_marginRight="80px"
            android:layout_marginLeft="40px"
            android:textColor="@color/color_333333"/>
    </RelativeLayout>
</RelativeLayout>