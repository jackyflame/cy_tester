<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px">
        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:src="@drawable/circle_drawable"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_toRightOf="@+id/iv_dot"
            android:layout_toLeftOf="@id/tv_time"
            android:layout_marginRight="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="翠月培训中心"
            android:textSize="45px"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_marginLeft="40px"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期五"
            android:textColor="@color/color_666666"
            android:textSize="36px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="2017第一学"
        android:textSize="40px"
        android:textColor="@color/color_333333"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="20px"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="40px"
        android:gravity="center_vertical"
        android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ededed"
        android:layout_alignParentBottom="true"/>
</LinearLayout>