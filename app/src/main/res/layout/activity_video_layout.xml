<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <include
        layout="@layout/include_comm_text_title"/>
    <RelativeLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.cyztc.app.widget.refresh.SpringView
            android:id="@+id/springview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f6f7ff"
                android:divider="@null"
                android:dividerHeight="20px">
            </ListView>
        </com.cyztc.app.widget.refresh.SpringView>
        <LinearLayout
            android:id="@+id/ly_loadmsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_white"/>
        <View
            android:id="@+id/v_bg"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b1000000"
            android:clickable="true"/>
        <ListView
            android:id="@+id/typelist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"/>
    </RelativeLayout>
</LinearLayout>