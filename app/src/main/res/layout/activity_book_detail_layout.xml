<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <include
        layout="@layout/include_comm_title_blue_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="530px">
                <ImageView
                    android:id="@+id/iv_ebook"
                    android:layout_width="280px"
                    android:layout_height="match_parent"
                    android:src="@drawable/temp_classes_bg"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="80px"
                    android:layout_marginTop="80px"
                    android:layout_marginBottom="80px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60px"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/iv_ebook">
                    <TextView
                        android:id="@+id/tv_etitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40px"
                        android:textColor="@color/color_666666"
                        android:textSize="44px"
                        android:layout_marginTop="100px"
                        android:ellipsize="end"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/ly_action"
                        android:layout_marginBottom="80px"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_666666"
                            android:textSize="44px"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="90px">
                        <LinearLayout
                            android:id="@+id/ly_collec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/iv_collec"
                                android:layout_width="50px"
                                android:layout_height="50px"
                                android:src="@drawable/collec_selceted_selector"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收藏"
                                android:textColor="@color/color_666666"
                                android:textSize="38px"
                                android:layout_marginLeft="15px"/>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/color_ededed"/>
            <TextView
                android:id="@+id/tv_borrow"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:text="借阅"
                android:textColor="@color/color_white"
                android:textSize="48px"
                android:gravity="center"
                android:background="#2a97f1"/>
            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_marginRight="40px"
                android:layout_marginLeft="40px"
                android:layout_above="@+id/ly_action"
                android:layout_below="@+id/tv_name"
                android:layout_marginBottom="15px"
                android:textColor="@color/color_666666"
                android:textSize="40px"
                android:lineSpacingExtra="4px"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_loadmsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_ededed"/>
    </RelativeLayout>
</LinearLayout>