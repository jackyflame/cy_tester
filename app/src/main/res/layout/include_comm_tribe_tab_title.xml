<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_system_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_12a7e2">

        <LinearLayout
            android:id="@+id/ly_system_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="123px"
            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="100px"
                android:layout_height="100px"
                android:padding="18px"
                android:src="@mipmap/icon_back"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>
            <com.cyztc.app.widget.ywl5320.TabNavitationLayout
                android:id="@+id/tab_bar"
                android:layout_width="400px"
                android:layout_height="80px"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_centerInParent="true">

            </com.cyztc.app.widget.ywl5320.TabNavitationLayout>

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:paddingTop="32px"
                android:paddingBottom="32px"
                android:paddingRight="40px"
                android:paddingLeft="2px"
                android:src="@mipmap/icon_menu_blue"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="32px"
                android:paddingBottom="32px"
                android:paddingRight="40px"
                android:paddingLeft="2px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="下一步"
                android:textColor="@color/color_white"
                android:textSize="45px"
                android:visibility="invisible"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>