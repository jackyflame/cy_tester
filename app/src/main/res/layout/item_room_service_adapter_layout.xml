<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px">
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_status"
            android:textSize="40px"
            android:textColor="@color/color_333333"
            android:text="服务类型"
            android:layout_marginLeft="40px"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行中"
            android:textSize="36px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_e10000"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-12-18"
        android:layout_marginTop="20px"
        android:layout_marginLeft="40px"
        android:textColor="@color/color_666666"
        android:textSize="34px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginBottom="40px">

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_marginLeft="40px"/>

        <LinearLayout
            android:id="@+id/ly_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/iv_picture">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点："
                android:layout_marginLeft="40px"
                android:textColor="@color/color_333333"
                android:textSize="36px"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地点地点地点地点地点地点地点地点地点地点地点地点地点地点地点"
                android:layout_marginLeft="40px"
                android:textColor="@color/color_333333"
                android:textSize="36px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/ly_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/iv_picture">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注："
                android:layout_marginLeft="40px"
                android:textColor="@color/color_333333"
                android:textSize="36px"/>
            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地点地点地点地点地点地点地点地点地点地点地点地点地点地点地点"
                android:layout_marginLeft="40px"
                android:textColor="@color/color_333333"
                android:textSize="36px"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_ededed"/>
</LinearLayout>