<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <include
        android:id="@+id/title"
        layout="@layout/include_comm_game_text_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:text="翠月直通车"
        android:textSize="70px"
        android:textColor="@color/color_12a7e2"/>
    <EditText
        android:id="@+id/et_account"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/et_white_normal_bg"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="80px"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="38px"
        android:hint="用户名"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:gravity="center"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/et_white_normal_bg"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="40px"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:inputType="textPassword"
        android:textSize="38px"
        android:hint="密码"
        android:maxLength="20"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:gravity="center"
        android:singleLine="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="80px"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="员工账户"
            android:textSize="40px"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"/>
        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switch_empe"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/SwitchButtonStyle"
            app:kswBackColor="@drawable/switchbtn_selector"
            app:kswBackMeasureRatio="2"
            app:kswThumbColor="@color/color_white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="20px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textSize="40px"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"/>
        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switch_rempwd"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/SwitchButtonStyle"
            app:kswBackColor="@drawable/switchbtn_selector"
            app:kswBackMeasureRatio="2"
            app:kswThumbColor="@color/color_white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="20px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:textSize="40px"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"/>
        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switch_autologin"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/SwitchButtonStyle"
            app:kswBackColor="@drawable/switchbtn_selector"
            app:kswBackMeasureRatio="2"
            app:kswThumbColor="@color/color_white"
            />
    </RelativeLayout>


    
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px">
        <LinearLayout
            android:id="@+id/ly_remember_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15px"
            android:paddingBottom="15px"
            android:gravity="center_vertical"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_remember_pwd"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/icon_auto_login_selected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="30px"
                android:text="学员身份"
                android:layout_marginLeft="15px"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15px"
            android:paddingBottom="15px"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_student"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/login_type_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="30px"
                android:text="学员身份"
                android:layout_marginLeft="15px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_eplee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingTop="15px"
            android:paddingBottom="15px">
            <ImageView
                android:id="@+id/iv_eplee"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/login_type_selector"/>
            <TextView
                android:id="@+id/tv_eplee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="30px"
                android:text="员工身份"
                android:layout_marginLeft="15px"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="150px"
        android:text="登录"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:textSize="45px"
        android:background="@drawable/btn_selector_blue"/>
</LinearLayout>