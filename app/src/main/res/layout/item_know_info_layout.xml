<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="350px"
    android:background="@color/color_white">
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="190px"
        android:layout_height="match_parent"
        android:src="@drawable/temp_classes_bg"
        android:scaleType="fitXY"
        android:layout_marginLeft="60px"
        android:layout_marginTop="40px"
        android:layout_marginBottom="40px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="40px"
            android:textColor="@color/color_333333"
            android:textSize="44px"
            android:layout_marginTop="30px"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginRight="40px"
            android:layout_above="@+id/ly_action"
            android:layout_below="@+id/tv_name"
            android:layout_marginBottom="15px"
            android:textColor="@color/color_666666"
            android:textSize="36px"
            android:lineSpacingExtra="4px"
            android:ellipsize="end"/>
        <LinearLayout
            android:id="@+id/ly_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40px">
            <LinearLayout
                android:id="@+id/ly_collec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:src="@mipmap/icon_know_collect"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textColor="@color/color_666666"
                    android:textSize="38px"
                    android:layout_marginLeft="15px"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="60px"
                android:gravity="center">
                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:src="@mipmap/icon_know_download"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载"
                    android:textColor="@color/color_666666"
                    android:textSize="38px"
                    android:layout_marginLeft="15px"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>