<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ededed">
    <include
        layout="@layout/include_comm_text_title"/>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:visibility="gone"
        android:background="@color/color_white">
        <RelativeLayout
            android:id="@+id/rl_open_door"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_toLeftOf="@+id/v_center"
            android:layout_marginRight="60px"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_door_lock_bg"
                android:layout_centerInParent="true"
                android:layout_marginRight="4px"/>
            <com.cyztc.app.widget.ywl5320.ColorProgressBarView
                android:id="@+id/colorProgressbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_margin="2px"/>
            <ImageView
                android:id="@+id/iv_lock"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/icon_door_open"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_center"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_toRightOf="@+id/v_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大门"
                android:textSize="42px"
                android:textColor="@color/color_333333"/>
            <TextView
                android:id="@+id/tv_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态：开"
                android:layout_marginTop="15px"
                android:textSize="36px"
                android:textColor="@color/color_0cd38a"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>