<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ededed">
    <include
        android:id="@+id/title"
        layout="@layout/include_comm_text_title"/>
    <EditText
        android:id="@+id/et_title"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100px"
        android:background="@color/color_white"
        android:layout_marginTop="30px"
        android:hint="标题（4-25个字）"
        android:textColorHint="@color/color_666666"
        android:textColor="@color/color_333333"
        android:textSize="45px"
        android:maxLength="50"
        android:padding="20px"/>
    <EditText
        android:id="@+id/et_content"
        android:layout_below="@+id/et_title"
        android:layout_above="@id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:layout_marginTop="30px"
        android:padding="30px"
        android:hint="内容最少10个字"
        android:textColorHint="@color/color_666666"
        android:textColor="@color/color_333333"
        android:textSize="40px"
        android:gravity="left|top"
        android:layout_marginBottom="20px"
        />
    <ListView
        android:id="@+id/listview"
        android:layout_above="@id/ly_action"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ly_action"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/iv_emoji"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/icon_publish_emmoji"
            android:visibility="gone"
            android:padding="30px"/>
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/icon_publish_img"
            android:padding="30px"/>
    </LinearLayout>
</RelativeLayout>